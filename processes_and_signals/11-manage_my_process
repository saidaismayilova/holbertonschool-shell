#!/usr/bin/env bash

PID_FILE="/var/run/my_process.pid"
SCRIPT_PATH="/tam/yol/manage_my_process"  # Buraya manage_my_process faylının tam yolunu yaz

start() {
    "$SCRIPT_PATH" &        # manage_my_process-i arxa planda işə salır
    echo $! > "$PID_FILE"   # PID-ni fayla yazır
    echo "manage_my_process started"
}

stop() {
    if [ -f "$PID_FILE" ]; then
        kill "$(cat "$PID_FILE")" 2>/dev/null  # Prosesı dayandırır
        rm -f "$PID_FILE"                       # PID faylını silir
        echo "manage_my_process stopped"
    fi
}

restart() {
    stop
    start
    echo "manage_my_process restarted"
}

case "$1" in
    start) start ;;
    stop) stop ;;
    restart) restart ;;
    *) echo "Usage: manage_my_process {start|stop|restart}" ;;
esac

