#!/usr/bin/env bash
# File: 11-manage_my_process
# Init-style script to manage the manage_my_process daemon

PID_FILE="/var/run/my_process.pid"
SCRIPT_PATH="$(pwd)/manage_my_process"  # full path to the process

start() {
    if [ -f "$PID_FILE" ] && kill -0 "$(cat "$PID_FILE")" 2>/dev/null; then
        return 0
    fi
    "$SCRIPT_PATH" &        # start in background
    echo $! > "$PID_FILE"
    echo "manage_my_process started"
}

stop() {
    if [ -f "$PID_FILE" ]; then
        kill "$(cat "$PID_FILE")" 2>/dev/null
        rm -f "$PID_FILE"
    fi
    echo "manage_my_process stopped"
}

restart() {
    stop
    sleep 1
    start
    echo "manage_my_process restarted"
}

case "$1" in
    start)   start ;;
    stop)    stop ;;
    restart) restart ;;
    *) echo "Usage: manage_my_process {start|stop|restart}" ;;
esac

