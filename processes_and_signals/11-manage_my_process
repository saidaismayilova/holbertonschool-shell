#!/usr/bin/env bash
# File: 11-manage_my_process

PID_FILE="/var/run/my_process.pid"
SCRIPT_PATH="/path/to/manage_my_process"  # replace with the correct path

case "$1" in
    start)
        $SCRIPT_PATH &
        echo $! > "$PID_FILE"
        echo "manage_my_process started"
        ;;
    stop)
        if [ -f "$PID_FILE" ]; then
            kill "$(cat $PID_FILE)"
            rm -f "$PID_FILE"
        fi
        echo "manage_my_process stopped"
        ;;
    restart)
        if [ -f "$PID_FILE" ]; then
            kill "$(cat $PID_FILE)"
            rm -f "$PID_FILE"
        fi
        $SCRIPT_PATH &
        echo $! > "$PID_FILE"
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
esac

