#!/usr/bin/env bash
# This script writes its PID to a file, handles signals, and prints messages

PID_FILE="/tmp/myscript.pid"  # Changed from /var/run/myscript.pid

# Write PID immediately
echo $$ > "$PID_FILE"

# Function to handle SIGTERM
sigterm_message() {
    echo "I hate the kill command"
    rm -f "$PID_FILE"
    exit 0
}

# Function to handle SIGQUIT
sigquit_cleanup() {
    rm -f "$PID_FILE"
    exit 0
}

trap sigterm_message SIGTERM
trap sigquit_cleanup SIGQUIT

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 1
done

