#!/usr/bin/env bash
# This script writes its PID to /var/run/myscript.pid and handles signals

PID_FILE="/var/run/myscript.pid"

# Write the PID immediately
echo $$ > "$PID_FILE"

# Function to handle SIGTERM: print message and terminate
sigterm_message() {
    echo "I hate the kill command"
    rm -f "$PID_FILE"
    exit 0
}

# Function to handle SIGQUIT: cleanup and terminate
sigquit_cleanup() {
    rm -f "$PID_FILE"
    exit 0
}

# Trap signals
trap sigterm_message SIGTERM
trap sigquit_cleanup SIGQUIT

# Infinite loop printing message
while true; do
    echo "To infinity and beyond"
    sleep 1
done

