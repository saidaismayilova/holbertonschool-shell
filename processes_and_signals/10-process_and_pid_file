#!/usr/bin/env bash
# Process script that handles signals and creates a PID file

# Create the PID file
echo $$ > /var/run/myscript.pid

# Function to handle SIGTERM or SIGQUIT
cleanup() {
    echo "I hate the kill command"
    rm -f /var/run/myscript.pid
    exit 0
}

# Function to handle SIGINT (Ctrl+C)
sigint_handler() {
    echo "Y U no love me?!"
}

# Trap signals
trap cleanup SIGTERM SIGQUIT
trap sigint_handler SIGINT

# Infinite loop printing the message
while true; do
    echo "To infinity and beyond"
    sleep 2
done

