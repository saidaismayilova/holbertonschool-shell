#!/usr/bin/env bash
# Create a PID file, handle signals, and print messages indefinitely

# Create the PID file
echo $$ > /var/run/myscript.pid

# Function to handle SIGTERM and SIGQUIT: delete PID file and terminate
terminate() {
    rm -f /var/run/myscript.pid
    exit 0
}

# Function to handle SIGTERM for message only
sigterm_message() {
    echo "I hate the kill command"
}

# Function to handle SIGINT (Ctrl+C)
sigint_handler() {
    echo "Y U no love me?!"
}

# Trap signals
trap sigterm_message SIGTERM
trap terminate SIGQUIT
trap sigint_handler SIGINT

# Infinite loop printing message
while true; do
    echo "To infinity and beyond"
    sleep 2
done

