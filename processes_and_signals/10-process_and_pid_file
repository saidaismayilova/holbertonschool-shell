#!/usr/bin/env bash

PID_FILE="/var/run/myscript.pid"

# Write the script's PID to the PID file
echo $$ > "$PID_FILE"

# Function to handle SIGTERM for a message only
sigterm_message() {
    echo "I hate the kill command"
}

# Function to handle SIGINT
sigint_message() {
    echo "Y U no love me?!"
}

# Function to handle SIGQUIT or SIGTERM for cleanup
cleanup() {
    rm -f "$PID_FILE"
    exit 0
}

# Trap signals
trap sigterm_message SIGTERM
trap sigint_message SIGINT
trap cleanup SIGQUIT

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 1
done

