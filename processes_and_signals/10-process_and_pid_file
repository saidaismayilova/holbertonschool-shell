#!/usr/bin/env bash
# Create a PID file, handle signals, and print messages indefinitely

# Use /tmp for PID file (safer in test environment)
PIDFILE="/tmp/myscript.pid"

# Create the PID file
echo $$ > "$PIDFILE"

# Function to terminate: delete PID file and exit
terminate() {
    rm -f "$PIDFILE"
    exit 0
}

# Function to handle SIGTERM: print message, then terminate
sigterm_handler() {
    echo "I hate the kill command"
    terminate
}

# Function to handle SIGINT (Ctrl+C)
sigint_handler() {
    echo "Y U no love me?!"
}

# Trap signals
trap sigterm_handler SIGTERM
trap terminate SIGQUIT
trap sigint_handler SIGINT

# Infinite loop printing message
while true; do
    echo "To infinity and beyond"
    sleep 2
done

