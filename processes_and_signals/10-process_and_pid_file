#!/usr/bin/env bash
# This script writes its PID to /var/run/myscript.pid, handles signals, and prints messages

PID_FILE="/var/run/myscript.pid"

# Ensure we can write to /var/run
if ! touch "$PID_FILE" 2>/dev/null; then
    echo "Error: Cannot create $PID_FILE. Try running as root."
    exit 1
fi

# Write the PID
echo $$ > "$PID_FILE"

# Function to handle SIGTERM
sigterm_message() {
    echo "I hate the kill command"
    rm -f "$PID_FILE"
    exit 0
}

# Function to handle SIGQUIT
sigquit_cleanup() {
    rm -f "$PID_FILE"
    exit 0
}

# Trap signals
trap sigterm_message SIGTERM
trap sigquit_cleanup SIGQUIT

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 1
done

